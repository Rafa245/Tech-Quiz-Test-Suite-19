{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": [
      "cypress",
      "node",
      "react",
      "react-dom",
      "@types/react",
      "@types/react-dom"
    ],
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*"
  ]
}
